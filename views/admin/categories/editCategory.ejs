<%- include('../../partials/header.ejs')%>

<body>
  <div class="page">
    <%- include('../../partials/navbarAdmin.ejs')%>

    <div class="container">
      <div class="card">
        <div class="card-header">
          <h2>Editar categoria</h2>
          <hr>
        </div>
        <div class="card-body">
          <form action="/admin/category/update" method="post" onsubmit="confirmAction(event)">
            <input class="form-control" type="text" name="title" placeholder="Defina o titulo da categoria" value="<%-categories.title%>">
            <input type="hidden" name="id" value="<%- categories.id %>">
            <div class="buttons">
              <input class="btn btn-success" type="submit" value="Editar">

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs')%>