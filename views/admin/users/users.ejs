<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbarAdmin.ejs") %>

<div class="container">
        <hr>
        <h2>Usuários</h2>
        <a class="btn btn-success" href="/admin/users/new">Criar novo usuário</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%users.forEach(users=>{%>
                    <tr>
                        <th><%-users.id %></th>
                        <th><%-users.email %></th>
                        <th>
                          <a href="/admin/users/edit/<%-users.id %>">
                            <img class="icons" src="/img/editdocument_105148.svg" alt="Editar" title="Editar">
                          </a>
                          <form method="POST" action="/admin/users/delete" style="display: inline;" onsubmit="confirmAction(event)">
                            <input type="hidden" name="id" value="<%- users.id %>">
            
                            <button>
                              <img class="icons" src="/img/delete_remove_bin_icon-icons.com_72400.svg" alt="Deletar" title="Deletar">
                            </button>
                          </form>
                        </th>
                      </tr>
                      
                <%})%>
            </tbody>
        </table>
</div>



<%- include ("../../partials/footer.ejs") %>