<%- include('partials/header.ejs')%>

<body>
  <%- include('partials/navbarHome.ejs')%>
  <div class="container">
    <h1>Bem vindo ao MyBlog</h1>
    <hr>
    <div class="newBtn">
      <a href="/admin/article/new" class="btn btn-success">+</a>
    </div>
    <% article.forEach((article)=>{ %>
    <div class="card">
      <div class="card-header">
        <h2><%-article.title %></h2>
      </div>
      <div class="card-body">
        <strong>Resumo: </strong><%-article.summary %>
      </div>
      <div class="card-footer">
        <a href="<%-article.slug%>" class="btn btn-success"> Ler Artigo</a>
      </div>
    </div>
    <%})%>
  </div>

</body>
<%- include('partials/footer.ejs') %>